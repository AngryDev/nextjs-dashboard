{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "comma-dangle": ["error", "never"],
        "semi": ["error", "never"],
        "jsx-quotes": ["error", "prefer-single"],
        "space-before-function-paren": ["error", "always"]
    }
}
